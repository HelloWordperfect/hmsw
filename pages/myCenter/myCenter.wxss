/* pages/myCenter/myCenter.wxss */
page {
  background: #F3F3F3;
}

.my {
  width: 100%;
  height: auto;
  position: relative;
}

.my-back {
  width: 100%;
  height: 300rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.my-back>image {
  width: 100%;
  height: 100%;
}

.my-money {
  width: 690rpx;
  height: 200rpx;
  position: absolute;
  top: 200rpx;
  left: 30rpx;
  z-index: 9999;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0px 5px 12px 1px rgba(204, 70, 67, 0.41);
  display: flex;
}

.my-money-item {
  flex: 1;
  text-align: center;
}

.my-money-item>view:first-child {
  font-size: 28rpx;
  color: #E95355;
  margin: 50rpx 0 35rpx 0;
  height: 36rpx;
}

.my-money-item>view:last-child {
  font-size: 30rpx;
  color: #333;
}

.my-up {
  width: 100%;
  height: auto;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
  margin-top: 300rpx;
}

.my-top {
  width: 100%;
  height: auto;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9999;
}

.my-top>view:first-child {
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}

.my-top>view:last-child {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 5rpx solid #fff;
  box-shadow: 0 0 10rpx #E84B45;
  margin: 60rpx auto 0 auto;
}

.my-top>view:last-child>image {
  width: 100%;
  height: 100%
}

.my-order {
  width: 100%;
  height: auto;
  padding-top: 120rpx;
  background: #fff;
}

.my-order-top {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #f3f3f3;
  display: flex;
  justify-content: space-between;
}

.my-order-top>view:first-child {
  width: 150rpx;
  height: auto;
  margin: 0 30rpx;
  font-size: 30rpx;
  color: #333;
}

.my-order-top>view:nth-child(2) {
  flex: 1;
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

.my-order-top>image {
  width: 11rpx;
  height: 20rpx;
  margin: 40rpx 30rpx 0 15rpx;
}
.my-order-item{
	width: 100%;
	height: 160rpx;
	display: flex;
	justify-content: space-between;
}
.my-orderitem-one{
	flex: 1;
	text-align: center;
}
.my-orderitem-one>image{
	width: 55rpx;
	height: 50rpx;
	margin: 35rpx auto 15rpx auto;
}
.my-orderitem-one>view{
	font-size: 24rpx;
	color: #666;
}
.my-list{
	width: 100%;
	height: auto;
	background: #fff;
  border-top: 10rpx solid #f3f3f3;
}
.my-list-one{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 2rpx solid #f3f3f3;
	display: flex;
	justify-content: space-between;
}
.my-list-one>image:first-child{
	width: 38rpx;
	height: 38rpx;
	margin: 31rpx 36rpx 31rpx 30rpx;
}
.my-list-one>view{
	font-size: 30rpx;
	color: #333;
	flex: 1;
}
.my-list-one>image:last-child{
	width: 11rpx;
	height: 20rpx;
	margin: 40rpx 30rpx;
}