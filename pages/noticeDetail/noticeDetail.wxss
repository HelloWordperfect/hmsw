/* pages/noticeDetail/noticeDetail.wxss */
.notice {
  width: 690rpx;
  height: auto;
  margin: 0 auto;
}

.shop-xiang {
  width: 100% !important;
  height: auto !important;
}

.notice-title {
  font-size: 40rpx;
  color: #333;
  margin: 30rpx 0;
  line-height: 50rpx;
}

.notice-time {
  width: 100%;
  height: auto;
  display: flex;
}

.notice-time>view:first-child {
  font-size: 30rpx;
  color: #999;
  margin-right: 30rpx;
}

.notice-time>view:last-child {
  font-size: 30rpx;
  color: #E95355;
}

.notice-nei {
  width: 100%;
  height: auto;
  margin-top: 40rpx;
}

.notice-nei>view {
  font-size: 24rpx;
  color: #333;
  line-height: 35rpx;
  text-indent: 2em;
  margin-bottom: 20rpx;
}

.notice-nei>image {
  width: 100%;
  height: 260rpx;
}