/* pages/category/category.wxss */
page,.list {
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.list-top {
  width: 690rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 14rpx 30rpx;
  background: #E95355;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99
}

.list-top-nr {
  width: 690rpx;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, .5);
  display: flex;
}

.list-top-nr>image {
  width: 34rpx;
  height: 34rpx;
  margin: 13rpx 20rpx;
}

.list-top-nr>view {
  font-size: 26rpx;
  color: #fff;
}

.list-content {
  width: 100%;
  height: calc(100% - 100rpx);
  display: flex;
  margin-top: 100rpx;
}

.list-left {
  width: 170rpx;
  background: #F7F7F7;
  overflow: scroll;
   -webkit-overflow-scrolling : touch;
}

.list-left>view {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  border-top: 2rpx solid #f7f7f7;
  box-sizing: border-box;
}

.list-left>.list-left-active {
  background: #fff;
  border-left: 5rpx solid #E95355;
  box-sizing: border-box;
}

.list-right {
  width: 530rpx;
  margin: 0 30rpx 20rpx 20rpx;
}

.list-right>image {
  width: 530rpx;
  height: 200rpx;
}

.list-right-nr {
  width: 100%;
  height: auto;
  overflow: scroll;
  margin-top: 20rpx;
   -webkit-overflow-scrolling : touch;
}

.list-right-one {
  width: 160rpx;
  height: 180rpx;
  margin: 0 25rpx 25rpx 0;
  float: left;
}

.list-right-one:nth-child(3n) {
  margin: 0 0 25rpx 0;
}

.list-right-one>image {
  width: 130rpx;
  height: 130rpx;
  margin: 0 15rpx;
}

.list-right-one>view {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #333;
  text-align: center;
  overflow: hidden;
}