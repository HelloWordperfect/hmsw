/* pages/systemMessage/systemMessage.wxss */
.system {
  width: 100%;
  height: auto;
}
.moveDis {
  left: -140rpx !important;
}

.moveDis1 {
  left: 0 !important;
}
.system-list {
  width: 710rpx;
  height: 230rpx;
  margin: 0 auto;
  display: flex;
  position: relative;
}

.system-list-nr {
  width: 100%;
  height: auto;
  position: absolute;
  top: 0;
  left: 0;
  transition: all .5s;
  z-index: 9999;
  background: #fff;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f3f3f3;
}

.system-nr {
  width: 100%;
  height: auto;
  display: flex;
}

.system-nr>image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.system-nr-title {
  flex: 1;
}

.system-nr-title>view:first-child {
  font-size: 28rpx;
  color: #333;
  margin-top: -10rpx;
}

.system-nr-title>view:last-child {
  font-size: 20rpx;
  color: #999;
}

.system-wz {
  width: 600rpx;
  height: 70rpx;
  line-height: 35rpx;
  background: #f5f5f5;
  margin: 10rpx 20rpx 0 60rpx;
  padding: 15rpx;
}

.system-wz>view {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  color: #666;
  line-height: 35rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.system-delete {
  width: 100rpx;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  background: #E95355;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #fff;
  position: absolute;
  right: 0;
  top: 30rpx;
  z-index: 999;
}